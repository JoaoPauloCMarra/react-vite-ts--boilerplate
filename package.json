{
  "name": "react-vite-ts",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "jest -u --colors -o --cache --maxWorkers=50%",
    "test:all": "jest -u --colors -o --cache --all -i",
    "test:watch": "jest -u --colors -o --cache --watch --maxWorkers=25%",
    "build": "npm run format && tsc && vite build",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@jest/types": "^29.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-react": "^2.0.1",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=16",
    "yarn": ">=1"
  },
  "lint-staged": {
    "*.{tsx,ts,svg,json}": "npm run format"
  }
}
